# Environment Configuration
NODE_ENV=development

# Backend API Configuration
API_PORT=5000
PORT=3000

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/goldenknightlounge

# Yahoo Fantasy API OAuth Configuration
YAHOO_CLIENT_ID=your_yahoo_client_id_here
YAHOO_CLIENT_SECRET=your_yahoo_client_secret_here

# OAuth Redirect URIs (environment-specific)
# Development: Use ngrok URL (e.g., https://your-ngrok-url.ngrok.io/auth/callback)
# Staging: https://staging.goldenknightlounge.com/auth/callback
# Production: https://goldenknightlounge.com/auth/callback
YAHOO_REDIRECT_URI=http://localhost:5000/api/auth/callback

# Security Configuration
FLASK_SECRET_KEY=generate_a_random_secret_key_here
JWT_SECRET=generate_another_random_secret_here

# Token Encryption Key (generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())")
TOKEN_ENCRYPTION_KEY=generate_fernet_key_here

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:5000

# Replit Deployment (auto-populated by Replit)
REPLIT_DEPLOYMENT_URL=

# Custom Domain Configuration
CUSTOM_DOMAIN=goldenknightlounge.com
ALLOWED_HOSTS=localhost,goldenknightlounge.com,www.goldenknightlounge.com

# External APIs (future use)
MLB_API_KEY=

# Feature Flags
ENABLE_LIVE_STATS=false
ENABLE_DEBUG_LOGGING=true

# Authentication Success Redirect
AUTH_SUCCESS_REDIRECT=/dashboard