# Golden Knight Lounge Environment Variables
# Copy this file to .env and fill in your values

# Environment
NODE_ENV=development

# API Configuration
API_PORT=5000
PORT=3000

# Database (PostgreSQL on Replit)
DATABASE_URL=postgresql://user:password@host:port/database

# Yahoo Fantasy API
YAHOO_CLIENT_ID=your_client_id_here
YAHOO_CLIENT_SECRET=your_client_secret_here
YAHOO_REDIRECT_URI=http://localhost:3000/auth/callback

# Security
JWT_SECRET=your_jwt_secret_here

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:5000

# Production Domains
CUSTOM_DOMAIN=goldenknightlounge.com
ALLOWED_HOSTS=goldenknightlounge.com,www.goldenknightlounge.com,goldenknightlounge.repl.co

# Feature Flags
ENABLE_LIVE_STATS=false
ENABLE_DEBUG_LOGGING=true

# External APIs (optional)
MLB_API_KEY=